
@{
    ViewBag.Title = "Create";

}

<body>
    <h2>새 노트</h2>
    @using (Html.BeginForm("Insert", "Note"))
    {
        <b>노트북 :</b>
        @Html.DropDownList("noteBookId")
        <div>
            제목: <br />
            @Html.TextBox("title", "")
        </div>
        <div>
            내용: <br />
            @Html.TextArea("contents")
        </div>
        <input type="submit" value="저장" />
    }

    <script>
        ClassicEditor
            .create(document.querySelector('#contents'))
            .catch(error => {
                console.error(error);
            });
    </script>
</body>